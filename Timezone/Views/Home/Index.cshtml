@{
ViewBag.Title = "Ana Səhifə";
}

<!-- Slider Area Start -->
<div class="slider-area ">
	<div class="slider-active">
		<!-- Single Slider -->
		<div class="single-slider slider-height d-flex align-items-center slide-bg">
			@await Component.InvokeAsync("Slider")
		</div>

	</div>
</div>
<!-- Slider Area End-->

<!--  New Product Start -->
<section class="new-product-area section-padding30">
	<div class="container">
		<!-- Section tittle -->
		<div class="row">
			<div class="col-xl-12">
				<div class="section-tittle mb-70 text-center">
					<h2>Ən Yeni Məhsullar</h2>
				</div>
			</div>
		</div>
		<div class="row">
			@await Component.InvokeAsync("NewestProduct")
		</div>
	</div>
</section>
<!--  New Product End -->

<!-- Gallery Area Start -->
<div class="gallery-area">
	<div class="container-fluid p-0 fix">
		<div class="row">
			@await Component.InvokeAsync("Galery")
		</div>
	</div>
</div>
<!-- Gallery Area End -->

<!-- Popular Items Start -->
<div class="popular-items section-padding30">
	<div class="container">
		<!-- Section tittle -->
		<div class="row justify-content-center">
			<div class="col-xl-7 col-lg-8 col-md-10">
				<div class="section-tittle mb-70 text-center">
					<h2>Ən Çox Satılanlar</h2>
					<p>Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse ultrices gravida.</p>
				</div>
			</div>
		</div>
		<div class="row">
			@await Component.InvokeAsync("Product")
		</div>
		<!-- Button -->
		<div class="row justify-content-center">
			<div class="room-btn pt-70">
				<a asp-controller="Product" asp-action="Index" class="btn view-btn1">Bütün Məhsullar</a>
			</div>
		</div>
	</div>
</div>
<!-- Popular Items End -->

