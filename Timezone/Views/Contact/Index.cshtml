@model Contact

     <!--? Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Əlaqə</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--? Hero Area End-->
        <!-- ================ contact section start ================= -->
        <section class="contact-section">
            <div class="container">
                <div class="row">
                    <div class="col-12">    
                    </div>
                    <div class="col-lg-8">
                        <form class="form-contact contact_form"  method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <textarea asp-for="Message" class="form-control w-100" cols="30" rows="9" onfocus="this.placeholder = ''" placeholder=" Mesajınızı daxil edin"></textarea>
                                        <span class="text-danger" asp-validation-for="Message"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                <input asp-for="FullName" class="form-control valid" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Adınız və Soyadınız '" placeholder="Adınız və Soyadınız">
                                <span class="text-danger" asp-validation-for="FullName"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                <input asp-for="Email" class="form-control valid" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Elektron poçtunuz '" placeholder="Elektron poçtunuz">
                                <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                <input asp-for="Subject" class="form-control" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mətnin başlığı'" placeholder=" Mətnin başlığı">
                                <span class="text-danger" asp-validation-for="Subject"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="button button-contactForm boxed-btn">Göndər</button>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-3 offset-lg-1">
                        @*<div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-home"></i></span>
                            <div class="media-body">
                                <h3>Buttonwood, California.</h3>
                                <p>Rosemead, CA 91770</p>
                            </div>
                        </div>*@
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                            <div class="media-body">
                                <h3>@ViewBag.PhoneInfo</h3>
                                <p>Həftə içi 9-5</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-email"></i></span>
                            <div class="media-body">
                                <h3>@ViewBag.EmailInfo</h3>
                                <p>Ən qısa zamanda geri dönüş edəcəyik!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ================ contact section end ================= -->