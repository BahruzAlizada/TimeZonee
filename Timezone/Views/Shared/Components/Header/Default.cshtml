@model Bonus

<div class="container-fluid">
    <div class="menu-wrapper">
        <!-- Logo -->
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/logo/logo.png" alt=""></a>
        </div>
        <!-- Main-menu -->
        <div class="main-menu d-none d-lg-block">
            <nav>
                <ul id="navigation">
                    <li><a asp-controller="Home" asp-action="Index">Ana Səhifə</a></li>
                    <li><a asp-controller="Product" asp-action="Index">Məhsullar</a></li>
                    <li><a asp-controller="About" asp-action="Index">Haqqımızda</a></li>
                    <li><a asp-controller="Blog" asp-action="Index">Bloqlar</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Əlaqə</a></li>
                </ul>
            </nav>
        </div>
        <!-- Header Right -->
        <div class="header-right">
            <ul>
               
                @if (User.Identity.IsAuthenticated)
                {
                    
                    <div class="dropdown show">
                        <a style="padding:9px; background-color:white; color:black;" href="#" class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          @User.Identity.Name
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-area="User" asp-controller="Profile" asp-action="Index">Hesaba keç</a>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıxış et</a>
                        </div>
                    </div>
                    <li>
                        <div style="border:0.6px solid black;">
                            <span>@Model.Amount Bonus</span>
                        </div>
                    </li>
                    <li><a asp-controller="Basket" asp-action="Index"><span class="flaticon-shopping-cart"></span></a> </li>
                }
                else
                {
                    <li> <a asp-controller="Account" asp-action="Login"><span class="flaticon-user"></span></a></li>
                }
                
            </ul>
        </div>
    </div>
    <!-- Mobile Menu -->
    <div class="col-12">
        <div class="mobile_menu d-block d-lg-none"></div>
    </div>
</div>
