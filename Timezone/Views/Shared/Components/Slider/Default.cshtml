@model Slider

<div class="container">
    <div class="row justify-content-between align-items-center">
        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
            <div class="hero__caption">
                <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">@Model.Title</h1>
                <p data-animation="fadeInLeft" data-delay=".7s" data-duration="2000ms">@Model.SubTitle</p>
                <!-- Hero-btn -->
                <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                    <a asp-controller="Product" asp-action="Index" class="btn hero-btn">Saatlara bax</a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
            <div class="hero__img" data-animation="bounceIn" data-delay=".4s">
                <img src="~/assets/img/hero/@Model.Image" alt="" class=" heartbeat">
            </div>
        </div>
    </div>
</div>