@model RegisterVM
@{
    ViewBag.Title = "Qeydiyyat";
}

       <!-- Hero Area Start-->
    <div class="slider-area ">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Qeydiyyat</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End-->
    <!--================login_part Area =================-->
    <section class="login_part section_padding ">
        <div class="container">
            <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>
                            Xoş Gəldiniz ! <br>
                            Zəhmət olmasa qeydiyyatdan keçin
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        </h3>
                        <form class="row contact_form" method="post">
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Name" class="form-control" placeholder="Ad" />
                                <span class="text-danger" asp-validation-for="Name"></span>    
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Surname" class="form-control" placeholder="Soyad" />
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input asp-for="UserName" class="form-control" placeholder="İstifadəçi adı" />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                          
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Password" class="form-control" placeholder="Şifrə" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input asp-for="CheckPassword" class="form-control" placeholder="Şifrə təkrarı" />
                                <span class="text-danger" asp-validation-for="CheckPassword"></span>
                            </div>

                            <div class="col-md-12 form-group">
                                <div class="creat_account d-flex align-items-center">
                                    <input type="checkbox" asp-for="IsRemember">
                                    <label for="f-option">Məni xatırla</label>
                                </div>
                                <button type="submit" value="submit" class="btn_3">
                                     Qeydiyyatdan keç
                                </button>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>

                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>Bir Hesabın var?</h2>
                            <p>
                                Zatən bir hesabın varsa, hesaba daxil olub veb-səhifənin bütün funksionallıqlarından yararlana bilərsiniz
                            </p>
                            <a asp-controller="Account" asp-action="Login" class="btn_3">Zatən bİr Hesabım var</a>
                        </div>
                    </div>
                </div>
             
            </div>
        </div>
    </section>
    <!--================login_part end =================-->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}