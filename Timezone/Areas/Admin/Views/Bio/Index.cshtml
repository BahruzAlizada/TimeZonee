@model Bio
<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>Bio</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Başlıq Şəkli</th>
                        <th>Axrıncı Şəkil</th>
                        <th style="text-align:right">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            <img src="~/assets/img/logo/@Model.HeaderImage" style="object-fit:cover; height:90px; width:180px;"/>
                        </td>

                        <td>
                            <img src="~/assets/img/logo/@Model.FooterImage" style="object-fit:cover; height:90px; width:180px;" />
                        </td>

                        <td>
                            <div style="display:flex;justify-content:flex-end">
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning text-white" style="margin-right:10px">Yenilə</a>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />

