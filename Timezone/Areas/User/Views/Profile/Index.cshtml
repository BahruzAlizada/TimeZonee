@{
    ViewBag.Title = "Profil";
}

@model UserVM

<!-- Begin Top Author Page
================================================== -->
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">

			<ul class="nav nav-pills flex-column flex-md-row mb-3">
				<li class="nav-item">
					<a class="nav-link active" asp-action="Index"><i class="bx bx-user me-1"></i> Profil</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" asp-action="AccountInformation"><i class="bx bx-link-alt me-1"></i>Hesab haqqında</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" asp-action="ChangePassword"><i class="bx bx-compass me-1"></i> Şifrə</a>
				</li>

			</ul>


			<div class="mainheading">
				<div class="row post-top-meta authorpage">
					<div class="col-md-2 col-xs-12">
						<img class="author-thumb" src="~/assets/img/user/@Model.Image" style="max-width: 100px; max-height: 100px; border-radius:50px;">
					</div>
					<div class="col-md-10 col-xs-12">
						<h4>
							@Model.UserName
							@if (Model.IsVerify)
							{
								<i style="color:green;" class='bx bxs-check-circle'></i>
							}
							@if (Model.IsSalesAccount==true)
							{
								<i style="color:darkblue;" class='bx bxl-sketch'></i>
							}
						</h4>
						<span class="author-description">@Model.Bio</span>
					</div>

				</div>
			</div>
	</div>
</div>
<!-- End Top Author Meta
================================================== -->
