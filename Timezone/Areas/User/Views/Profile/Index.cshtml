@{
    ViewBag.Title = "Profil";
}

@model UserVM

 <!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills flex-column flex-md-row mb-3">
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Profile"><i class="bx bx-user me-1"></i> Profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="pages-account-settings-notifications.html"><i class="bx bx-bell me-1"></i> Notifications</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="ChangePassword"><i class="bx bx-link-alt me-1"></i> Şifrəni dəyiş</a>
                </li>
            </ul>


            <div class="card mb-4">
                <h5 class="card-header">Hesab haqqında</h5>
                <!-- Account -->
                <hr class="my-0" />
                <div class="card-body">
                    <form method="POST">
                        <div class="row">

                            <div class="mb-3 col-md-6">
                                <label asp-for="Name" class="form-label">Ad</label>
                                <input asp-for="Name" class="form-control" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="Surname" class="form-label">Soyad</label>
                                <input asp-for="Surname" class="form-control" />
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="UserName" class="form-label">İstifadəçi adı</label>
                                <input asp-for="UserName" class="form-control" />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                           
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-outline-success me-2">Yadda Saxla</button>
                            <button type="reset" class="btn btn-outline-secondary">Sıfırla</button>
                        </div>
                    </form>
                </div>
                <!-- /Account -->
            </div>


            <div class="card">
                <h5 class="card-header">Hesabı Sil</h5>
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading fw-bold mb-1">Hesabı silmək istdəyindən əminsən mi ?</h6>
                        </div>
                    </div>
                   

                    <!-- Vertically Centered Modal -->
                    <div class="col-lg-4 col-md-6">
                        <div class="mt-3">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalCenter">
                                Hesabı Sil
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalCenterTitle">Hesabı Sil</h5>
                                            <button type="button"
                                                    class="btn-close"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <hr />
                                        <div class="modal-body">
                                            <p>
                                                Hesabı silsən əgər yenidən bu hesaba qayıtmağın münkün olmayacaqdır.
                                                Hesabı silmək üçün aşağıdaki "Hesabı sil" düyməsinə basın
                                            </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                                Bağla
                                            </button>
                                            <a asp-action="DeactiveAccount" class="btn btn-danger">Hesabı Sil</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Vertically Centered Modal -->
                      
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}